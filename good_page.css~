	/*Set Background CSS Properties*/
	body { 
		background-image:url("../images/gray.jpg");
		padding-top: 50px;
	}

	/*Set Maximum Dimensions for Image */
	img{
		max-width: 300px; 
		max-height: 300px;
	}

	/*Styling for header*/
	h1{
		font-weight: 900;
		text-align: left;
		padding-left: 10px;

	}

	/*CSS styling for the graphic image with ID: "name" */
	#name{
		text-align: center;
		font-family: Rockwell;
		padding-left: 10px;
		color: rgba(255, 255, 255, .6);
	}

	/*CSS styling for the ID "stantec" */
	#stantec
	{
		display: block;
		margin: 0 auto;
	}

	/*CSS Styling for the flexbox class sections*/
	.sections{
		display: -webkit-flex;
		display: flex;
		flex-direction:column;

		
	}

	/*CSS Styling for an individual section within the class sections */
	.section{
		background: rgba(255, 255, 255, .5);
		margin:20px;
		font-family: Optima;
	}

	/*CSS Styling for text alignment in paragraphs of class "expertiseDetails"*/
	.expertiseDetails{
		padding-left: 40px;
		padding-bottom: 10px;
	}

	/*CSS Styling for the flexbox class imgContainer*/
	.imgContainer{
		display: -webkit-flex;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction:row;
	}

	/*CSS Styling for an individual imgItem within the class imgContainer */
	.imgItem img{
		max-width: 150px; 
		max-height: 150px;
		margin: 10px;
	}

	/*CSS Styling for an individual imgItem2 within the class imgContainer */
	.imgItem2 img {
		
		margin: 10px;
		border: 10px solid #000;  
		height: 150px;
		width: 150px;
		-webkit-box-shadow: 5px 5px 5px #111;
		box-shadow: 5px 5px 5px #111;  
		
	}

	/*Grow Image Effect Initializer*/
	.grow img {
		height: 150px;
		width: 150px;
		
		-webkit-transition: all 1s ease;
		-moz-transition: all 1s ease;
		-o-transition: all 1s ease;
		-ms-transition: all 1s ease;
		transition: all 1s ease;
	}
	
	/*Grow Image Effect*/
	.grow img:hover {
		width: 300px;
		height: 300px;
	}

	/*Padding for paragraphs in class jobDescriptions*/
	.jobDescriptions p{
		padding-left:20px;
	}

	/*CSS Styling for class creditionals*/
	.creditionals{
		font-size: medium;
		text-align: center;
		font-style: italic;
		color: rgba(255, 255, 255, .6);
	}

	/*Class Class Styling for class for "paragraphAlignment"*/
	.paragraphAlignment{
		padding: 10px;
		margin-left: 70px;
		margin-right: 70px;
		text-align: justify;
		text-indent: 1em;
		font-style: italic;
	}


	/*Class Class Styling for class for centering text*/
	.center{
		padding: 20px;
		text-align: center;
	}

	/*Css Class Styling for class for header*/
	.header{
		padding-top: 10px;
		padding-bottom: 20px;
		background-image: url("../images/wood.jpg");
		background-size: cover;
	}

	/*Border Styling for Images with Effects*/
	.pic {
		border-radius: 50%;
		border: 10px solid #000;  
		float: center;
		height: 300px;
		width: 300px;
		
		margin: 0 auto;
		overflow: hidden;

		
		-webkit-box-shadow: 5px 5px 5px #111;
		box-shadow: 5px 5px 5px #111;  
	}


	/*Spin Image Effect Initializer*/
	.spin {

		-webkit-transition: all 0.5s ease;
		-moz-transition: all 0.5s ease;
		-o-transition: all 0.5s ease;
		-ms-transition: all 0.5s ease;
		transition: all 0.5s ease;
	}
	
	/*SPin Image Effect*/
	.spin:hover {
		border-radius: 50%;
		-webkit-transform: rotate(360deg);
		-moz-transform: rotate(360deg);
		-o-transform: rotate(360deg);
		-ms-transform: rotate(360deg);
		transform: rotate(360deg);
	}